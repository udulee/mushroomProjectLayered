<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="448.0" prefWidth="600.0" stylesheets="@../css/tableStyle.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.mushroom.controller.DeliverPageController">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox prefHeight="33.0" prefWidth="600.0">
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
               <children>
                  <Label text="Deliver Id">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtDeliverId" prefHeight="25.0" prefWidth="323.0" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="100.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="40.0" prefHeight="33.0" prefWidth="600.0">
               <children>
                  <Label text="Order Id">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtOrderId" prefHeight="25.0" prefWidth="323.0" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="110.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="73.0" prefHeight="33.0" prefWidth="600.0">
               <children>
                  <Label text="Customer Id">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtCustomerId" prefHeight="25.0" prefWidth="323.0" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="85.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="107.0" prefHeight="33.0" prefWidth="600.0">
               <children>
                  <Label text="Order Amount">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtOrderAmount" prefHeight="25.0" prefWidth="323.0" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="72.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox>
               <children>
                  <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#btnAddButtonOnAction" style="-fx-background-color: #8DD8FF;" text="Add">
                     <HBox.margin>
                        <Insets left="50.0" />
                     </HBox.margin>
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnUpdate" mnemonicParsing="false" onAction="#btnUpdateButtonOnAction" style="-fx-background-color: #8DD8FF;" text="Update">
                     <HBox.margin>
                        <Insets left="150.0" />
                     </HBox.margin>
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#btnDeleteButtonOnAction" style="-fx-background-color: #8DD8FF;" text="Delete">
                     <HBox.margin>
                        <Insets left="200.0" />
                     </HBox.margin>
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
      <TableView fx:id="tblDeliver" layoutX="60.0" layoutY="200.0" onMouseClicked="#tblDeliverOnMouseClicked" prefHeight="247.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <columns>
          <TableColumn fx:id="tabDeliverId" prefWidth="75.0" text="Deliver Id" />
          <TableColumn fx:id="tabOrderId" prefWidth="75.0" text="Order Id" />
            <TableColumn fx:id="tabCustomerId" prefWidth="75.0" text="Customer Id" />
            <TableColumn fx:id="tabOrderAmount" prefWidth="75.0" text="Order Amount" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</AnchorPane>
