<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #fff;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.mushroom.controller.CustomerPageController">
    <children>
        <VBox prefHeight="200.0" prefWidth="100.0" stylesheets="@../css/tableStyle.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox prefWidth="100.0" spacing="10.0">
                    <children>
                        <HBox prefWidth="200.0">
                            <children>
                                <Label prefWidth="150.0" text="Customer Id">
                                    <font>
                                        <Font name="Calibri" size="13.0" />
                                    </font></Label>
                                <Label fx:id="lblCustomerId" text="1001" HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>
                        <HBox prefWidth="200.0" VBox.vgrow="ALWAYS">
                            <children>
                                <Label prefWidth="150.0" text="Name">
                                    <font>
                                        <Font name="Calibri" size="13.0" />
                                    </font></Label>
                                <TextField fx:id="txtName" promptText="customer" style="-fx-background-color: #fff; -fx-border-color: #7367F0; -fx-border-width: 0 0 1px 0;" HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>
                        <HBox layoutX="10.0" layoutY="110.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                            <children>
                                <Label prefWidth="150.0" text="Address">
                                    <font>
                                        <Font name="Calibri" size="13.0" />
                                    </font></Label>
                                <TextField fx:id="txtAddress" promptText="xxxxxxxxxxxxxxxxxxxxx" style="-fx-background-color: #fff; -fx-border-color: #7367F0; -fx-border-width: 0 0 1px 0;" HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>
                        <HBox layoutX="10.0" layoutY="143.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                            <children>
                                <Label prefWidth="150.0" text="Email">
                                    <font>
                                        <Font name="Calibri" size="13.0" />
                                    </font></Label>
                                <TextField fx:id="txtEmail" promptText="customer@gmail.com" style="-fx-background-color: #fff; -fx-border-color: #7367F0; -fx-border-width: 0 0 1px 0;" HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>
                        <HBox layoutX="10.0" layoutY="160.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                            <children>
                                <Label prefWidth="150.0" text="Phone">
                                    <font>
                                        <Font name="Calibri" size="13.0" />
                                    </font></Label>
                                <TextField fx:id="txtPhone" promptText="0744444444" style="-fx-background-color: #fff; -fx-border-color: #7367F0; -fx-border-width: 0 0 1px 0;" HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <HBox alignment="CENTER" prefWidth="200.0" spacing="20.0">
                    <children>
                        <Button fx:id="btnReport" minWidth="150.0" mnemonicParsing="false" onAction="#btnGenarateReportOnAction" style="-fx-background-color: #6439FF;" text="Genarate Report" textFill="WHITE">
                            <font>
                                <Font name="Calibri" size="13.0" />
                            </font>
                        </Button>
                        <Button fx:id="btnReset" layoutX="10.0" layoutY="10.0" minWidth="100.0" mnemonicParsing="false" onAction="#btnResetOnAction" style="-fx-background-color: #4F75FF;" text="Reset" textFill="WHITE">
                            <font>
                                <Font name="Calibri" size="13.0" />
                            </font>
                        </Button>
                        <Button fx:id="btnDelete" layoutX="62.0" layoutY="10.0" minWidth="100.0" mnemonicParsing="false" onAction="#btnDeleteOnAction" style="-fx-background-color: #00CCDD;" text="Delete" textFill="WHITE">
                            <font>
                                <Font name="Calibri" size="13.0" />
                            </font>
                        </Button>
                        <Button fx:id="btnUpdate" layoutX="114.0" layoutY="10.0" minWidth="100.0" mnemonicParsing="false" onAction="#btnUpdateOnAction" style="-fx-background-color: #7CF5FF;" text="Update" textFill="WHITE">
                            <font>
                                <Font name="Calibri" size="13.0" />
                            </font>
                        </Button>
                        <Button fx:id="btnSave" layoutX="166.0" layoutY="10.0" minWidth="100.0" mnemonicParsing="false" onAction="#btnSaveOnAction" style="-fx-background-color: #9ACBD0;" text="Save" textFill="WHITE">
                            <font>
                                <Font name="Calibri" size="13.0" />
                            </font>
                        </Button>
                    </children>
                    <padding>
                        <Insets bottom="10.0" top="10.0" />
                    </padding>
                </HBox>
                <TableView fx:id="tblCustomer" onMouseClicked="#custabOnMouseClicked" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="tabCustomerId" prefWidth="75.0" text="Customer Id" />
                        <TableColumn fx:id="tabName" prefWidth="75.0" text="Name" />
                        <TableColumn fx:id="tabAddress" prefWidth="75.0" text="Address" />
                        <TableColumn fx:id="tabEmail" prefWidth="75.0" text="Email" />
                        <TableColumn fx:id="tabPhone" prefWidth="75.0" text="Phone" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
