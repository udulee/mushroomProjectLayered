<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.mushroom.controller.OrderPageController">
    <children>
        <VBox prefHeight="500.0" prefWidth="600.0" spacing="20.0" style="-fx-background-color: #fff;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox spacing="10.0">
                    <children>
                        <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="160.0" prefHeight="27.2">
                            <children>
                                <HBox alignment="CENTER_LEFT" prefHeight="27.2" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label prefWidth="150.0" text="Order Id" HBox.hgrow="ALWAYS">
                                            <font>
                                                <Font name="Calibri" size="14.0" />
                                            </font>
                                        </Label>
                                        <Label fx:id="lblOrderId" layoutX="10.0" layoutY="15.0" maxWidth="500.0" prefHeight="18.0" prefWidth="300.0" text="1001" HBox.hgrow="ALWAYS">
                                            <font>
                                                <Font name="Calibri" size="14.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT">
                                    <children>
                                        <Label prefWidth="150.0" text="Order Date" HBox.hgrow="ALWAYS">
                                            <font>
                                                <Font name="Calibri" size="14.0" />
                                            </font>
                                        </Label>
                              <TextField fx:id="txtOrderDate" promptText="2025-06-03" />
                                    </children>
                                </HBox>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-border-color: #000; -fx-border-width: 0 0 1px 0;">
                            <children>
                                <HBox alignment="CENTER_LEFT">
                                    <children>
                                        <Label prefWidth="150.0" text="Customer Id" HBox.hgrow="ALWAYS">
                                            <font>
                                                <Font name="Calibri" size="14.0" />
                                            </font>
                                        </Label>
                              <TextField fx:id="txtCustomerId" prefHeight="25.0" prefWidth="184.0" HBox.hgrow="ALWAYS" />
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT">
                                    <children>
                                        <Label prefWidth="150.0" text="Customer name" HBox.hgrow="ALWAYS">
                                            <font>
                                                <Font name="Calibri" size="14.0" />
                                            </font>
                                        </Label>
                              <TextField />
                                    </children>
                                </HBox>
                            </children>
                            <VBox.margin>
                                <Insets bottom="10.0" />
                            </VBox.margin>
                            <padding>
                                <Insets bottom="5.0" />
                            </padding>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="42.0" spacing="20.0">
                            <children>
                                <HBox alignment="CENTER_LEFT">
                                    <children>
                                        <Label prefWidth="150.0" text="Item Id" HBox.hgrow="ALWAYS">
                                            <font>
                                                <Font name="Calibri" size="14.0" />
                                            </font>
                                        </Label>
                              <TextField fx:id="txtItemId" prefHeight="25.0" prefWidth="166.0" HBox.hgrow="ALWAYS" />
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT">
                                    <children>
                                        <Label prefWidth="150.0" text="Item name" HBox.hgrow="ALWAYS">
                                            <font>
                                                <Font name="Calibri" size="14.0" />
                                            </font>
                                        </Label>
                              <TextField />
                                    </children>
                                </HBox>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="73.0" spacing="20.0">
                            <children>
                                <HBox alignment="CENTER_LEFT" />
                                  <Label prefHeight="17.0" prefWidth="180.0" text="Unit Price" HBox.hgrow="ALWAYS">
                                      <font>
                                          <Font name="Calibri" size="14.0" />
                                      </font>
                                  </Label>
                                <HBox alignment="CENTER_LEFT">
                                    <children>
                                        <Label fx:id="lblItemPrice" prefWidth="150.0" text="0.00">
                                            <font>
                                                <Font name="Calibri" size="14.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </HBox>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" spacing="30.0">
                            <children>
                                <Label prefHeight="17.0" prefWidth="142.0" text="Qty">
                                    <font>
                                        <Font name="Calibri" size="14.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="txtAddToCartQty" maxWidth="1.7976931348623157E308" promptText="0" style="-fx-background-color: #ffffff; -fx-border-width: 0 0 1px 0; -fx-border-color: #000;" />
                                <Button fx:id="btnAddToCart" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#btnAddToCartOnAction" prefWidth="80.0" style="-fx-background-color: #8DD8FF;" text="Add" textFill="WHITE" HBox.hgrow="ALWAYS">
                                    <font>
                                        <Font name="Calibri Bold" size="14.0" />
                                    </font>
                                    <cursor>
                                        <Cursor fx:constant="CLOSED_HAND" />
                                    </cursor>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <TableView fx:id="tblCart" onMouseClicked="#labCustomerOnMouseClicked" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colItemId" prefWidth="75.0" text="order_ID" />
                        <TableColumn fx:id="colCustomerId" prefWidth="75.0" text="Customer Id" />
                        <TableColumn fx:id="colPaymentStatus" prefWidth="75.0" text="Payment Status" />
                        <TableColumn fx:id="colTotal" prefWidth="75.0" text="order_Date" />
                        <TableColumn fx:id="colOrderDate" prefWidth="75.0" text="total Amount" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                <HBox alignment="CENTER_RIGHT" spacing="30.0">
                    <children>
                        <Button fx:id="btnReset" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#btnResetOnAction" prefWidth="80.0" style="-fx-background-color: #8DD8FF;" text="Reset" textFill="WHITE" HBox.hgrow="ALWAYS">
                            <font>
                                <Font name="Calibri Bold" size="14.0" />
                            </font>
                            <cursor>
                                <Cursor fx:constant="CLOSED_HAND" />
                            </cursor>
                        </Button>
                        <Button fx:id="btnPlaceOrder" layoutX="10.0" layoutY="10.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#btnPlaceOrderOnAction" prefWidth="80.0" style="-fx-background-color: #8DD8FF;" text="Place Order" textFill="WHITE" HBox.hgrow="ALWAYS">
                            <font>
                                <Font name="Calibri Bold" size="14.0" />
                            </font>
                            <cursor>
                                <Cursor fx:constant="CLOSED_HAND" />
                            </cursor>
                        </Button>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
